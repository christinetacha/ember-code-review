{{#if addNewAnswer}}
  <h1>Add your own answer:</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="answer">Answer:</label>
        {{input value=answer id="answer"}}
      </div>
      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>Submit Answer</button>
{{/if}}
